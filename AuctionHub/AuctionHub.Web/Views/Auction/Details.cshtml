@model AuctionDetailsViewModel

@{
    ViewData["Title"] = "Auction Details";
}

<h3 class="text center">Auction for product @Model.Auction.ProductName</h3>
<div class="row">
    <div class="col s3"></div>
    <div class="col s3">
        <section>
            <label asp-for="@Model.Auction.CategoryName"></label>
            <div class="text center">@Model.Auction.CategoryName</div>
        </section>
        <section>
            <label asp-for="@Model.Auction.Description"></label>
            <div class="text center">@Model.Auction.Description</div>
        </section>
        <section>
            <label asp-for="@Model.LastBids"></label>
            <ul>
                @foreach (Bid bid in Model.LastBids)
                {
                    <li>
                        <i></i> - @bid.Value$
                    </li>
                }
            </ul>
        </section>
    </div>
    <div class="col s3"></div>
</div>